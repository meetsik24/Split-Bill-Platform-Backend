# Split-Bill Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/splitbill

# Server Configuration
PORT=3000
NODE_ENV=development

# Briq SMS API Configuration
# Get your API key from: https://docs.briq.tz
BRIQ_API_KEY=your_briq_api_key_here
BRIQ_SENDER_ID=your_sender_id_here

# Africa's Talking USSD Configuration
# Get your credentials from: https://developers.africastalking.com
AT_USERNAME=your_at_username_here
AT_API_KEY=your_at_api_key_here
AT_ENVIRONMENT=sandbox

# Security
JWT_SECRET=your_jwt_secret_here
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Redis Configuration (for production session storage)
# REDIS_URL=redis://localhost:6379

# Optional: Logging Configuration
# LOG_LEVEL=info
# LOG_FORMAT=json
